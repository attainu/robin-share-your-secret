<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered all Secret!</h1>

    <% usersWithSecrets.forEach((user)=>{ %> <% if(user.title){ %>
    <p class="title-text"><%=user.title.toUpperCase()%></p>
    <% } %>
    <p class="secret-text"><%=user.secret%></p>
    <% }) %>

    <hr />
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button"
      >Submit a Secret</a
    >
  </div>
  <section class="pagination">
    <% if(currentPage!==1 && previousPage !== 1){ %>
    <a href="/secrets?page=1">First Page</a>
    <% } %> <% if(hasPreviousPage){ %>
    <a href="/secrets?page=<%= previousPage %> "><%= previousPage %> </a>
    <% } %>
    <a href="/secrets?page=<%= currentPage %> " class="active"
      ><%= currentPage %>
    </a>
    <% if(hasNextPage){ %>
    <a href="/secrets?page=<%= nextPage %> "><%= nextPage %> </a>
    <% } %> <% if(lastPage !== currentPage && nextPage !== lastPage){ %>
    <a href="/secrets?page=<%= lastPage %> "> Last Page </a>
    <% } %>
  </section>
</div>

<%- include('partials/footer') %>
